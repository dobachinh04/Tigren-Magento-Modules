<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.topnav">
            <!-- Block cho menu Tigren Testimonial -->
            <block class="Tigren\Testimonial\Block\CustomLink" name="testimonial-link">
                <arguments>
                    <argument name="label" xsi:type="string">Tigren Testimonial</argument>
                    <argument name="path" xsi:type="string">http://magento2.com/index.php/testimonial</argument>
                </arguments>
            </block>

            <!-- Block cho menu Add Testimonial -->
            <block class="Tigren\Testimonial\Block\CustomLink" name="add-testimonial-link">
                <arguments>
                    <argument name="label" xsi:type="string">Add Testimonial</argument>
                    <argument name="path" xsi:type="string">http://magento2.com/index.php/testimonial/index/add</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
