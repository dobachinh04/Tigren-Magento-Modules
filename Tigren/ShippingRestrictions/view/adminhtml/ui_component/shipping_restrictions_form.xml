<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">shipping_restrictions_form.shipping_restrictions_form_data_source</item>
            <item name="deps" xsi:type="string">shipping_restrictions_form.shipping_restrictions_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">Rule Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">shipping_restrictions_form</item>
        </item>
    </argument>

    <settings>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>

        <buttons>
            <button name="back">
                <url path="*/*/index" />
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="*/*/save" />
                <class>primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>shipping_restrictions_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>shipping_restrictions_form.shipping_restrictions_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="shipping_restrictions_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Tigren\ShippingRestrictions\Model\Config\Rule\DataProvider</argument>
            <argument name="name" xsi:type="string">shipping_restrictions_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">rule_id</argument>
            <argument name="requestFieldName" xsi:type="string">rule_id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="tab1">
        <settings>
            <label translate="true">General</label>
            <dataScope>general</dataScope>
        </settings>

        <field name="status" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">shipping_restrictions</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>

            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
                <visible>true</visible>
            </settings>

            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="required" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>

        <field name="store_ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Store IDs</item>
                    <item name="dataScope" xsi:type="string">store_ids</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="dataType" xsi:type="string">array</item>
                    <item name="options" xsi:type="array"> <!-- Load store options dynamically -->
                        <!-- Example: -->
                        <item name="1" xsi:type="string" translate="true">Default Store</item>
                        <item name="2" xsi:type="string" translate="true">Second Store</item>
                        <!-- Add more stores as needed -->
                    </item>
                </item>
            </argument>
        </field>
        <field name="customer_group_ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Customer Group IDs</item>
                    <item name="dataScope" xsi:type="string">customer_group_ids</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="dataType" xsi:type="string">array</item>
                    <item name="options" xsi:type="array"> <!-- Load customer group options dynamically -->
                        <item name="all" xsi:type="string" translate="true">All Customer Groups</item>
                        <item name="1" xsi:type="string" translate="true">General</item>
                        <item name="2" xsi:type="string" translate="true">Wholesale</item>
                        <!-- Add more customer groups as needed -->
                    </item>
                </item>
            </argument>
        </field>

        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="dataScope" xsi:type="string">description</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="dataType" xsi:type="string">text</item>
                </item>
            </argument>
        </field>

        <field name="priority">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Priority</item>
                    <item name="dataScope" xsi:type="string">priority</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">int</item>
                </item>
            </argument>
        </field>

        <field name="from_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">From Date</item>
                    <item name="dataScope" xsi:type="string">from_date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="dataType" xsi:type="string">date</item>
                </item>
            </argument>
        </field>

        <field name="to_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">To Date</item>
                    <item name="dataScope" xsi:type="string">to_date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="dataType" xsi:type="string">date</item>
                </item>
            </argument>
        </field>

        <field name="discard_subsequent" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">shipping_restrictions</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>

            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Discard Subsequent</label>
                <dataScope>is_active</dataScope>
                <visible>true</visible>
            </settings>

            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="tab2">
        <settings>
            <label translate="true">Conditions</label>
            <dataScope>tab2</dataScope>
        </settings>
    </fieldset>

    <fieldset name="tab3">
        <settings>
            <label translate="true">Action</label>
            <dataScope>action</dataScope>
        </settings>
        <field name="shipping_methods">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Select Shipping Methods</item>
                    <item name="dataScope" xsi:type="string">shipping_methods</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="dataType" xsi:type="string">array</item>
                    <item name="options" xsi:type="array"> <!-- Bạn cần lấy danh sách các shipping methods từ hệ thống -->
                        <item name="flatrate" xsi:type="string" translate="true">Flat Rate</item>
                        <item name="freeshipping" xsi:type="string" translate="true">Free Shipping</item>
                        <!-- Thêm các phương thức khác -->
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>