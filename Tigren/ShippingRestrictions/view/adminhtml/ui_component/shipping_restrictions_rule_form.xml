<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <dataSource name="shipping_restrictions_rule_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="name" xsi:type="string">shipping_restrictions_rule_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="primaryFieldName" xsi:type="string">shipping_restrictions_rule</argument>
            <argument name="data" xsi:type="array">
                <item name="js_config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/form/components/fieldset</item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General</label>
        </settings>
        <field name="name">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <formElement>input</formElement>
                <required>true</required>
            </settings>
        </field>
        <!-- Thêm các trường khác ở đây -->
    </fieldset>
    <fieldset name="conditions">
        <settings>
            <label translate="true">Conditions</label>
        </settings>
        <!-- Thêm điều kiện ở đây -->
    </fieldset>
    <fieldset name="action">
        <settings>
            <label translate="true">Action</label>
        </settings>
        <!-- Thêm các hành động ở đây -->
    </fieldset>
</form>
