<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Backend\Block\Widget\Form\Container" name="shipping_restrictions_rule_edit" template="Magento_Backend::widget/form/container.phtml">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Shipping Restriction Rule</argument>
                    <argument name="form_action" xsi:type="string">tigren_shippingrestrictions/rule/save</argument>
                </arguments>
                <block class="Magento\Ui\Block\Component\Tabs" name="shipping_restrictions_tabs" template="ui/tabs.phtml">
                    <block class="Magento\Backend\Block\Widget\Tabs" name="shipping_restrictions_rule_tabs" as="tabs">
                        <block class="Magento\Backend\Block\Widget\Form\Generic" name="general_tab" template="Tigren_ShippingRestrictions::rule/tabs/general.phtml">
                            <arguments>
                                <argument name="title" xsi:type="string" translate="true">General</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Form\Generic" name="conditions_tab" template="Tigren_ShippingRestrictions::rule/tabs/conditions.phtml">
                            <arguments>
                                <argument name="title" xsi:type="string" translate="true">Conditions</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Form\Generic" name="action_tab" template="Tigren_ShippingRestrictions::rule/tabs/action.phtml">
                            <arguments>
                                <argument name="title" xsi:type="string" translate="true">Action</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
